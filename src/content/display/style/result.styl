@import 'common.styl';

/**
 * start content style
 */
#{CommonPrefix}result {
    width: 100%;
    box-sizing: border-box;
    padding: 5% 10%;
    font-weight: normal;
    font-size: medium;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-start;

    .block {
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 0.5rem PaddingHorizon;
        margin: 0.2rem MarginHorizon;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 8px;
    }
}

hr {
    width: 100%;
}

/**
 * end content style
 */